<?xml version="1.0" encoding="utf-8"?>


<ripple android:color="#FF0000"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">

            <solid android:color="#22FF0000" />


            <corners
                android:radius="360dp"/>

            <padding
                android:right="20dp"
                android:left="15dp"
                android:top="1dp"
                android:bottom="1dp"/>

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">

            <stroke
                android:width="1dp"
                android:color="#FFFF0000"/>

            <corners
                android:radius="360dp"/>

            <padding
                android:right="20dp"
                android:left="15dp"
                android:top="1dp"
                android:bottom="1dp"/>


        </shape>
    </item>


</ripple>