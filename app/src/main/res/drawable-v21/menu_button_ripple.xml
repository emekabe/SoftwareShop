<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="#75FF0000"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/mask">
        <shape android:shape="oval">

            <solid android:color="#5CFF0000" />

            <corners
                android:radius="300dp"/>

            <padding
                android:right="20dp"
                android:left="15dp"
                android:top="1dp"
                android:bottom="1dp"/>

        </shape>
    </item>

    <item>
        <shape android:shape="oval">

            <solid android:color="#00FFF9D0" />


            <padding
                android:right="20dp"
                android:left="15dp"
                android:top="1dp"
                android:bottom="1dp"/>


        </shape>
    </item>


</ripple>

