<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/help_banner_bg"
        android:padding="16dp"
        android:paddingBottom="0dp">

        <ImageView
            android:layout_width="3600dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:foreground="@drawable/about_banner_fg"
            android:src="@drawable/ic_about_us_banner_figma"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-20dp"
        android:background="@drawable/help_collection_bg"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            app:tabGravity="center"
            app:tabIndicatorGravity="center"

            app:tabMode="scrollable"
            app:tabTextAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
            app:tabSelectedTextColor="#FFFFFF"
            app:tabTextColor="#000000"
            app:tabIndicatorHeight="48dp"
            app:tabIndicator="@drawable/tab_indicator_background"
            app:tabIndicatorColor="#FF0000"
            app:tabRippleColor="#06FF0000"
            app:tabBackground="@drawable/tab_background"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

<!--        android:layout_weight="1"-->

    </LinearLayout>

</LinearLayout>