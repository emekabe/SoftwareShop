<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFFFF"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/help_banner_bg"
            android:padding="16dp"
            android:paddingBottom="0dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="We are here to help."
                android:textSize="28sp"
                android:textColor="#FFFFFF"/>

<!--            <ImageView-->
<!--                android:layout_width="220dp"-->
<!--                android:layout_height="220dp"-->
<!--                android:layout_alignParentRight="true"-->
<!--                android:src="@drawable/ic_figma_help_slide_image_1"-->
<!--                android:layout_alignParentBottom="true"-->
<!--                android:scaleType="fitCenter"-->
<!--                android:layout_marginBottom="-30dp"/>-->

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/pager"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="-30dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="20dp"
            android:layout_marginTop="-20dp"
            android:background="@drawable/help_collection_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/about_card"
                    android:layout_marginRight="32dp"
                    style="@style/cardStyle">

                    <LinearLayout
                        android:id="@+id/about_background"
                        android:background="@color/cardBagckround"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/about_image"
                            android:src="@drawable/ic_about_us_figma"
                            style="@style/menuButtonImage"/>

                        <TextView
                            android:id="@+id/about_text"
                            style="@style/menuButtonText"
                            android:text="About Us"/>


                    </LinearLayout>

                    <View
                        android:id="@+id/info_button"
                        style="@style/menuButton"/>




                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/contact_card"
                    style="@style/cardStyle">

                    <LinearLayout
                        android:id="@+id/contact_background"
                        android:background="@color/cardBagckround"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/contact_image"
                            android:src="@drawable/ic_call_figma"
                            style="@style/menuButtonImage"/>

                        <TextView
                            android:id="@+id/contact_text"
                            style="@style/menuButtonText"
                            android:text="Contact"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/call_button"
                        style="@style/menuButton"/>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/location_card"
                    android:layout_marginRight="32dp"
                    style="@style/cardStyle">

                    <LinearLayout
                        android:id="@+id/location_background"
                        android:background="@color/cardBagckround"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/location_image"
                            android:src="@drawable/ic_location_figma"
                            style="@style/menuButtonImage"/>

                        <TextView
                            android:id="@+id/location_text"
                            style="@style/menuButtonText"
                            android:text="Location"/>


                    </LinearLayout>

                    <View
                        android:id="@+id/map_button"
                        style="@style/menuButton"/>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/message_card"
                    style="@style/cardStyle">

                    <LinearLayout
                        android:id="@+id/message_background"
                        android:background="@color/cardBagckround"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/message_image"
                            android:src="@drawable/ic_message_figma"
                            style="@style/menuButtonImage"/>

                        <TextView
                            android:id="@+id/message_text"
                            style="@style/menuButtonText"
                            android:text="Message"/>


                    </LinearLayout>

                    <View
                        android:id="@+id/sms_button"
                        style="@style/menuButton"/>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            

        </LinearLayout>

    </LinearLayout>

</ScrollView>